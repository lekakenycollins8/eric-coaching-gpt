{
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/(?!auth/)(.+)",
      "destination": "${NEXT_PUBLIC_API_URL}/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "env": {
    "NEXTAUTH_URL": "${NEXT_PUBLIC_APP_URL}"
  }
}
