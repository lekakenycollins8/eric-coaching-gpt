{
  "buildCommand": "next build",
  "outputDirectory": "",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "fallback": {
    "source": "/(.*)",
    "destination": "/api/404"
  }
}
